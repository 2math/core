<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="tv_font" format="string" localization="suggested"/>

    <attr name="TvType" format="enum">
        <enum name="regular" value="10"/>\
        <enum name="bold" value="11"/>
        <enum name="italic" value="12"/>
        <enum name="light" value="13"/>
        <enum name="awesome" value="14"/>
        <enum name="bold_italic" value="15"/>
    </attr>

    <attr name="strike" format="boolean"/>

    <attr name="strikeColor" format="color"/>

    <declare-styleable name="FontTextView">
        <!--    point font full name in "fonts/"-->
        <attr name="tv_font"/>
        <!--    point the application font predefined in application class -->
        <attr name="TvType" />
        <!--flag to strike trough text -->
        <attr name="strike" />
        <!--line color if flag to strike trough text is TRUE-->
        <attr name="strikeColor" />
    </declare-styleable>

    <declare-styleable name="FontEditTextView">
        <!--    point font full name in "fonts/"-->
        <attr name="tv_font"/>
        <!--    point the application font predefined in application class -->
        <attr name="TvType" />
        <!--flag to strike trough text -->
        <attr name="strike" />
        <!--line color if flag to strike trough text is TRUE-->
        <attr name="strikeColor" />
    </declare-styleable>

    <declare-styleable name="FontTextInputEditTextView">
        <!--    point font full name in "fonts/"-->
        <attr name="tv_font"/>
        <!--    point the application font predefined in application class -->
        <attr name="TvType" />
        <!--flag to strike trough text -->
        <attr name="strike" />
        <!--line color if flag to strike trough text is TRUE-->
        <attr name="strikeColor" />
    </declare-styleable>

    <declare-styleable name="GaleenCustomShapedImageView">
        <!--todo TBU-->
    </declare-styleable>
</resources>